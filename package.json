{
  "name": "xylographic-xylary-xylem",
  "version": "1.0.0",
  "description": "Interactive knowledge graph web app with Express and Tailwind",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"nodemon --watch src --watch public src/server.js\" \"npm run tailwind:watch\"",
    "build": "npm run tailwind:build",
    "tailwind:build": "tailwindcss -c tailwind.config.js -i ./src/styles/tailwind.css -o ./public/assets/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -c tailwind.config.js -i ./src/styles/tailwind.css -o ./public/assets/tailwind.css --watch",
    "test": "node --test"
  },
  "keywords": [
    "express",
    "tailwindcss",
    "sqlite",
    "multer"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "express": "^5.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.4.13"
  }
}
